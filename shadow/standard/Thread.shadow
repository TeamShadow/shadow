immutable singleton shadow:standard@Thread
{
	public native get current() => (ThreadWorker);
	
	public native sleep(int sec, int nsec) => ();
	
	public sleep(int ms) => ()
	{
		if(ms >= 1000)
		{
			int sec = ms / 1000;
			int nsec = (ms - sec * 1000) * 1000000;
			
			sleep(sec, nsec);
		}
		else sleep(0, ms * 1000000);
	}
}